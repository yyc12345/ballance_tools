                            <Button Content="立即部署" FontSize="15" Foreground="white" Grid.Row="3" Grid.Column="5" Background="#ff1e90ff" BorderThickness="1" Click="file_free"/>

                        </Grid>

                    </TabItem>

                    <!-- bgm-->
                    <TabItem Header="原版BGM包" Style="{DynamicResource ui_temp_normal_tabitem}">

